<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cry.forum.mapper.PostMapper">
    <resultMap id="BaseResultMap" type="com.cry.forum.model.Post">
        <id column="id" jdbcType="VARCHAR" property="id"/>
        <result column="title" jdbcType="VARCHAR" property="title"/>
        <result column="content" jdbcType="VARCHAR" property="content"/>
        <result column="user_id" jdbcType="VARCHAR" property="userId"/>
        <result column="cagetory_id" jdbcType="VARCHAR" property="cagetoryId"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="state" jdbcType="CHAR" property="state"/>
        <result column="appreciate" jdbcType="INTEGER" property="appreciate"/>
    </resultMap>
    <select id="query" resultType="com.cry.forum.vo.PostVO" >
    SELECT t.*,(select t1.avatar_url from user t1 where t.user_id = t1.id) avatar_url,(select t1.nick_name from user t1 where t.user_id = t1.id) nick_name FROM post t;
</select>

</mapper>